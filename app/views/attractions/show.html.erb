Name: <%= @attraction.name %><br>
Ticket Requirement: <%= @attraction.tickets %><br>
Height Requirement: <%= @attraction.min_height %> inches <br>
Nausea Rating: <%= @attraction.nausea_rating %><br>
Happiness Rating: <%= @attraction.happiness_rating %><br><br>


<% if current_user.admin == true %>
  <%= link_to "Edit Attraction", edit_attraction_path %>
<% else %>
  <%= form_for @attraction.rides.build do |f| %>
    <%= f.hidden_field :user_id, :user_id => current_user.id %>
    <%= f.hidden_field :attraction_id, :attraction_id => @attraction.id %>
    <%= f.submit "Go on this ride" %>
  <% end %>
<% end %>
