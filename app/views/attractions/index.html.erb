<h1>Attractions!</h1>

<% @attractions.each do |attraction| %>
  <% if @user.admin %>
    <%= link_to "Edit", edit_attraction_path(attraction) %>
    <%= link_to "Delete", attraction, method: :delete, data: { confirm: "Really?" } %>
    <%= link_to "Show #{attraction.name}", attraction %><br>
  <% else %>
    <%= link_to "Go on #{attraction.name}", attraction %><br>
  <% end %>
<% end %>

<% if @user.admin %>
  <%= link_to "New Attraction", new_attraction_path %>
<% end %>
